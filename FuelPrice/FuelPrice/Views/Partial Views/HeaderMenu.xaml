<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FuelPrice.Views.Partial_Views.HeaderMenu">
    <ContentView.Content>
        <StackLayout>
            <Frame CornerRadius="25">
                <Image x:Name="total"></Image>
            </Frame>
            <Label Text="Sea benvenido!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="txtNameUser"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" TextColor="#7d2b4f" FontSize="Medium" FontAttributes="Bold"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>